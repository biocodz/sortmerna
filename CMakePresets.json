{
    "version": 6,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
        {
            "name": "LIN_release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "WITH_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ROCKSDB_DIST": "$env{HOME}/a1/code/rocksdb/dist",
                "ROCKSDB_USE_STATIC_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CONCURRENTQUEUE_HOME": {
                    "type": "PATH",
                    "value": "$env{HOME}/a1/code/concurrentqueue"
                },
                "ZLIB_USE_STATIC_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_INSTALL_PREFIX": "$env{HOME}/a1/code/sortmerna/dist"
            }
        },
        {
            "name": "LIN_debug",
            "inherits": "LIN_release",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "WIN_release",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL",
                "CMAKE_INSTALL_PREFIX": "$env{USERPROFILE}/a1/code/sortmerna/dist/t1/release",
                "ZLIB_ROOT": "$env{USERPROFILE}/a1/libs/zlib/dist/t1",
                "ZLIB_USE_STATIC_LIBS":
                {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ROCKSDB_DIST": "$env{USERPROFILE}/a1/libs/rocksdb/dist/t3/release",
                "ROCKSDB_USE_STATIC_LIBS":
                {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CONCURRENTQUEUE_HOME": "$env{USERPROFILE}/a1/libs/concurrentqueue",
                "DIRENTWIN_HOME": "$env{USERPROFILE}/a1/libs/dirent",
                "WITH_TESTS":
                {
                    "type": "BOOL", 
                    "value": "ON"
                },
                "CPACK_BINARY_NSIS": {"type": "BOOL", "value": "OFF"},
                "CPACK_BINARY_7Z": {"type": "BOOL", "value": "ON"},
                "CPACK_BINARY_ZIP": {"type": "BOOL", "value": "OFF"},
                "CPACK_SOURCE_7Z": {"type": "BOOL", "value": "ON"},
                "CPACK_SOURCE_ZIP": {"type": "BOOL", "value": "OFF"}
            }
        },
        {
            "name": "WIN_debug",
            "inherits": "WIN_release",
            "cacheVariables": {
                "ROCKSDB_DIST": "$env{USERPROFILE}/a1/libs/rocksdb/dist/t3/debug",
                "CMAKE_INSTALL_PREFIX": "$env{USERPROFILE}/a1/code/sortmerna/dist/t1/debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "LIN_release",
            "configuration": "Release",
            "configurePreset": "LIN_release"
        },
        {
            "name": "LIN_debug",
            "configuration": "Debug",
            "configurePreset": "LIN_debug"
        },
        {
            "name": "WIN_release",
            "configuration": "Release",
            "configurePreset": "WIN_release"
        },
        {
            "name": "WIN_debug",
            "configuration": "Debug",
            "configurePreset": "WIN_debug"
        }
    ]
}